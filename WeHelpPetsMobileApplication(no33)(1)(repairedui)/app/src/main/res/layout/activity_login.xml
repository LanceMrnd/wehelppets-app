<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wehelppetsloginbackgroundlinkpink"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/rectangle_bg"
        android:layout_width="351dp"
        android:layout_height="475dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.789"
        app:srcCompat="@drawable/bg_background_shape" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="152dp"
        android:layout_marginBottom="488dp"
        android:background="@drawable/bg_background_shape"
        android:orientation="vertical"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailTIL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.805"
        tools:ignore="MissingConstraints">

    </com.google.android.material.textfield.TextInputLayout>

    <!--Input password -->


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_below="@id/passwordTIL"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="264dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="#FFA9A3"
        android:fontFamily="@font/poppins_bold"
        android:rotationX="2"
        android:text="Login"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="0.243"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/recoverPassTv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginBtn"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/poppins_italic"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textColor="#FFA9A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nothave_accountTv"
        app:layout_constraintVertical_bias="0.786" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleLoginBtn"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_below="@id/recoverPassTv"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:foregroundTintMode="add"
        app:buttonSize="wide"
        app:colorScheme="dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/loginBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.143">

    </com.google.android.gms.common.SignInButton>

    <TextView
        android:id="@+id/nothave_accountTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/monteserrat_bold"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="#FFA9A3"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/googleLoginBtn"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="@+id/googleLoginBtn"
        app:layout_constraintTop_toBottomOf="@+id/googleLoginBtn"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textfieldborder"
        android:drawableStart="@drawable/icon_email"
        android:drawablePadding="10dp"
        android:fontFamily="@font/glacial_reg"
        android:hint="Email"
        android:textColorHighlight="@color/pink"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColorHint="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_bg"
        app:layout_constraintVertical_bias="0.448"
        app:layout_constraintWidth_percent=".8">

    </EditText>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        app:layout_constraintVertical_bias="0.133"
        app:srcCompat="@drawable/button_bg" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTIL"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@id/passwordTIL"
        android:layout_marginTop="16dp"

        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_bg"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintStart_toStartOf="@+id/rectangle_bg"
        app:layout_constraintTop_toBottomOf="@+id/emailEt"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black">

        <EditText
            android:id="@+id/passwordEt"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/textfieldborder"
            android:drawableStart="@drawable/icon_password"
            android:fontFamily="@font/glacial_reg"
            android:hint="Password"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textColor="#070707"
            android:textColorHint="#0C0C0C">

        </EditText>


    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
