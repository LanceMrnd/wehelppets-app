<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pLocationEt"
            android:padding="10dp"
            android:text="Enter Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/pTitleEt"
            android:background="@drawable/editextstyle"
            android:padding="10dp"
            android:hint="Enter Title"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/pImageIv"
            android:background="@drawable/emptyphotocover"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="200dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ADD PHOTO"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/pDescriptionEt"
            android:background="@drawable/editextstyle"
            android:padding="10dp"
            android:hint="Enter Description"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="120dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/pUploadBtn"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/post_button_border"
            android:drawableLeft="@drawable/ic_upload_pink"
            android:paddingHorizontal="40dp"
            android:textColor="@color/pink"
            android:text="Upload" />

        <Button
            android:id="@+id/pLocationBtn"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/post_button_border"
            android:layout_gravity="end"
            android:textColor="@color/pink"
            android:drawableLeft="@drawable/ic_location_pink"
            android:paddingHorizontal="40dp"
            android:drawablePadding="20dp"
            android:text="Get Current Location" />

    </LinearLayout>

</RelativeLayout>